{
    "extends": [
        "airbnb-base",
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
            "globalReturn": true,
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "ecmaVersion": 2018
    },
    "plugins": [
        "import",
        "react",
        "jsx-a11y"
    ],
    "env": {
        "node": true,
        "es6": true,
        "browser": true
    },
    "settings": {
        "react": {
            "pragma": "React",
            "version": "16.0"
        },
        "import/resolver": {
            "node": {
                "extensions": [".js", ".jsx", ".ts", ".tsx"]
            },
            "moduleDirectory": [
                "node_modules",
                "src"
            ]
        }
    },
    "rules": {
        "indent": ["error", 4],
        "react/jsx-uses-react": "error",
        "react/jsx-uses-vars": "error",
        "react/prop-types": ["off"]
    }
}
